<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto/test.grs.com.im"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="ResAuto">
    <!-- item背景色变换 -->
    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:paddingLeft="5dip"
        android:paddingTop="2dip"
        android:background="@drawable/text_type"
        android:paddingBottom="2dip"/>
    <LinearLayout 
        android:id="@+id/ll_constact"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/whites">


        <test.grs.com.ims.view.RoundImageView
            android:id="@+id/icon"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:src="@drawable/icon_default_avatar"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="#336598"
                android:gravity="center_vertical"
                android:text=""
                android:layout_marginLeft="15dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/nick_phone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#336598"
                android:text=""
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/message_send"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:clickable="true"
            android:src="@drawable/jgz" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- 不允许button有默认焦点,否则长按无效 -->

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="www"
        android:textColor="@color/cor19"
        android:textSize="@dimen/font_size_12sp" />

    <TextView
        android:id="@+id/im_item_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_solid_radius"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:padding="5dp"
        android:text="滴滴答答滴滴答nkkkkksssk滴滴答kkkk答的kkkkkk答的"
        android:textColor="@color/whites"
        android:textSize="@dimen/font_size_13sp" />

</LinearLayout>
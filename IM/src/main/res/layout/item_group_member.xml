<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/text_type"
    android:layout_height="wrap_content" >
<!--       android:src="@drawable/icon_default_avatar"-->
    <test.grs.com.ims.view.RoundImageView
        android:id="@+id/member_avatar_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/recommand_bgs"
    />

    <TextView
        android:id="@+id/member_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_avatar_imageView"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="20"
        android:text=" "
        android:singleLine="true"
        android:layout_alignRight="@+id/member_avatar_imageView"
        android:textSize="@dimen/font_size_13sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="群主"
        android:textStyle="bold"
        android:id="@+id/tv_owner"
        android:textSize="10sp"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:src="@drawable/star"
        android:textColor="#0fd5f2"
        android:layout_alignBottom="@+id/member_avatar_imageView"
         />

</RelativeLayout>
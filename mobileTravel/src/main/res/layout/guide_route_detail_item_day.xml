<?xml version="1.0" encoding="utf-8"?>
<com.cmcc.hyapps.andyou.widget.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_margin"
    android:layout_marginRight="@dimen/common_margin"
    app:rippleDelayClick="true" >

    <LinearLayout
        android:id="@+id/route_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.cmcc.hyapps.andyou.widget.RatioImageView
                android:id="@+id/cover_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:contentDescription="@string/content_description"
                android:minHeight="178dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_image_hint" />

            <TextView
                android:id="@+id/scenic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="7dp"
                android:background="@drawable/tag_badge_bg"
                android:drawableLeft="@drawable/ic_spacing"
                android:gravity="center"
                android:text="黄鹤楼"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="黄鹤楼"
            />
        <TextView
            android:id="@+id/content"
            style="@style/text_item_trip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="黄鹤楼"
            android:maxLines="8"
            />
    </LinearLayout>
    </LinearLayout>
</com.cmcc.hyapps.andyou.widget.MaterialRippleLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/me_header_background"
                android:orientation="vertical">

    <Button
        android:id="@+id/me_header_view_login_button"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_me_header_login_selector"
        android:text="快速登录"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/me_header_view_has_login_layout"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <com.cmcc.hyapps.andyou.widget.roundimageview.RoundedImageView
            android:id="@+id/me_header_view_avator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/me_header_avator_hint"
            app:border_color="@color/white"
            app:border_width="1dp"
            app:oval="true"
            />

        <TextView
            android:id="@+id/me_header_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_header_view_avator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/me_header_view_forcus_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_header_view_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/me_header_view_my_forcus_view"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的关注"
                android:textColor="#a09c9b"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:background="#a09c9b"/>

            <TextView
                android:id="@+id/me_header_view_forcus_me_view"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="关注我的"
                android:textColor="#a09c9b"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:background="#a09c9b"/>

            <TextView
                android:id="@+id/me_header_view_my_circles_view"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="群组"
                android:textColor="#a09c9b"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_header_view_forcus_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/me_header_view_my_forcus"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="#a09c9b"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/me_header_view_forcus_me"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="#a09c9b"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/me_header_view_my_circles"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="#a09c9b"
                android:textSize="14dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
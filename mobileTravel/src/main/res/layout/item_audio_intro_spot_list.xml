<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_intro_spot_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="53dp" >

    <ImageView
        android:id="@+id/play_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:src="@drawable/playing_indicator"
        android:visibility="invisible"
        />

    <com.cmcc.hyapps.andyou.widget.roundimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/audio_intro_spot_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image_hint"
        app:corner_radius="5dip" />

    <TextView
        android:id="@+id/audio_intro_spot_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@drawable/item_audio_text_selecter"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/audio_intro_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:textColor="@drawable/item_audio_text_selecter"
        android:textSize="17sp" />

</LinearLayout>
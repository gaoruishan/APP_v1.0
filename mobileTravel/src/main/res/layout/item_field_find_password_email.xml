<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="53dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
    >

    <com.cmcc.hyapps.andyou.support.ExEditText
        android:id="@+id/find_password_email"
        style="@style/settings_btn_blur"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="46dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:gravity="left|center_vertical"
        android:hint="@string/hint_login_input_register_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/common_margin"
        android:singleLine="true"
        android:textColor="@color/black_text_color_selecter"
        android:textColorHint="#cacaca"/>
    <com.cmcc.hyapps.andyou.support.ExEditText
        android:id="@+id/find_password_emails"
        style="@style/settings_btn_blur"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="46dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:inputType="textCapWords"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:password="true"
        android:gravity="left|center_vertical"
        android:hint="@string/hint_login_input_email_password"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/common_margin"
        android:singleLine="true"
        android:textColor="@color/black_text_color_selecter"
        android:textColorHint="#cacaca"/>

    <TextView
        android:id="@+id/find_password_has_register_email"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginRight="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/common_margin"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@color/black_text_color_selecter"
        />
    <ToggleButton
        android:id="@+id/find_password_emails_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:background="@drawable/btn_settings_on_off_slt"
        android:textOff=""
        android:textOn=""/>
</LinearLayout>
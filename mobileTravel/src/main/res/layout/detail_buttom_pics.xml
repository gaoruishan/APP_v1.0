<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/scenery_detail_buttom_pic1"
        android:scaleType="fitXY"
        android:background="@drawable/recommand_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/scenery_detail_buttom_pic2"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/recommand_bg"
        android:layout_alignTop="@+id/scenery_detail_buttom_pic1"
        android:layout_centerHorizontal="true" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/recommand_bg"
        android:id="@+id/scenery_detail_buttom_pic3"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/scenery_detail_buttom_pic2"
        android:layout_toEndOf="@+id/scenery_detail_buttom_pic2"
        android:layout_toRightOf="@+id/scenery_detail_buttom_pic2" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:id="@+id/tv_pic_title1"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center|left"
        android:background="#90000000"
        android:layout_alignBottom="@+id/scenery_detail_buttom_pic1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/tv_pic_title12"
        android:background="#90000000"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center|left"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/tv_pic_title1"
        android:layout_alignLeft="@+id/scenery_detail_buttom_pic2"
        android:layout_alignStart="@+id/scenery_detail_buttom_pic2" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center|left"
        android:textColor="@color/white"
        android:text=""
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_pic_title13"
        android:background="#90000000"
        android:layout_alignTop="@+id/tv_pic_title12"
        android:layout_alignRight="@+id/scenery_detail_buttom_pic3"
        android:layout_alignEnd="@+id/scenery_detail_buttom_pic3" />
</RelativeLayout>

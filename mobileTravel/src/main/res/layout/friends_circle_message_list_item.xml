<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
    >

    <com.cmcc.hyapps.andyou.widget.roundimageview.RoundedImageView
        android:id="@+id/friends_message_item_avator"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_avata_hint"
        app:border_color="@color/white"
        app:border_width="1dp"
        app:oval="true"/>

    <LinearLayout
        android:id="@+id/friends_message_item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/friends_message_item_avator"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friends_message_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:singleLine="true"
            android:textColor="#2c3232"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/friends_message_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#565656"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/friends_message_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>
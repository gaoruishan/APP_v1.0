<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
    </style>

    <!-- Style for action bar. -->
    <style name="action_bar">
        <item name="android:background">@color/title_bg</item>
    </style>
    <style name="action_bar_new">
        <item name="android:background">@color/base_bg</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Style for action bar left/right item -->
    <style name="action_tab_lr">
        <item name="android:gravity">center</item>
        <item name="android:padding">13dp</item>
    </style>

    <!-- Style for bottom tabs -->
    <style name="bottom_tab">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:textColor">@color/common_text_color_selecter</item>
    </style>

    <style name="bottom_tab_detail">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:scaleType">center</item>
        <item name="android:textColor">@color/base_theme_normal</item>
    </style>


    <style name="scenery_detail_summary_text">
        <item name="android:textColor">@color/base_theme_normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scenery_detail_func_item" parent="@style/scenery_detail_summary_text">
        <item name="android:padding">13dp</item>
    </style> <style name="home_tab" parent="@style/scenery_detail_summary_text">
        <item name="android:padding">5dp</item>
    </style>

    <style name="scenery_cover_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="scenery_cover_intro">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="scenery_cover_distance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="scenery_scrollbar">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="service_popup_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@drawable/service_dialog_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="me_divider">
        <item name="android:src">@color/base_grey_line</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="me_all_divider">
        <item name="android:src">@color/base_grey_line</item>
    </style>

    <style name="settings_btn">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="settings_btn_grey" parent="settings_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_btn_green_selecter</item>
    </style>
    <style name="settings_btn_blur" parent="settings_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_btn_blur_selecter</item>
    </style>

    <style name="text_summary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_text_summary</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_text_title</item>
    </style>

    <style name="text_title_white">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_title_blue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="text_summary_white">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_banner_title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:layout_margin">13dp</item>
    </style>

    <style name="text_weather">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_timeline_itinerary_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_text_summary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dialog_view_theme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_view_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_view_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_view_out_anim</item>
    </style>

    <style name="rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
    </style>

    <style name="rating_bar_small" parent="@style/rating_bar">
        <item name="android:progressDrawable">@drawable/layerlist_detail_star_small</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
    </style>
    <style name="restaurant_rating_bar" parent="@style/rating_bar">
        <item name="android:progressDrawable">@drawable/layer_restaurant_star_small</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="rating_bar_large" parent="@style/rating_bar">
        <item name="android:progressDrawable">@drawable/layerlist_detail_star_large</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="text_item_trip_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_item_trip_content</item>
    </style>

    <!-- <style name="text_shadow">
        <item name="android:shadowColor">#4c000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">25</item>
    </style> -->

    <style name="Dialog_loading" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!-- 无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 没有标题 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景是否半透明 -->
    </style>

    <style name="Dialog_loading_noDim" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!-- 无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 没有标题 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景是否半透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景是否模糊 -->
    </style>
    
   <style name="market_title">
       <item name="android:textColor">#666666</item>
       <item name="android:textSize">15sp</item>
       <item name="android:layout_centerVertical">true</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_width">wrap_content</item>
   </style>

    <style name="share">
        <item name="android:textColor">@color/market_actionbar</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
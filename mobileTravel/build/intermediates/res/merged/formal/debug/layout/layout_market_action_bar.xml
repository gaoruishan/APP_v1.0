<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    style="@style/action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:paddingLeft="8dp"
    >
    <TextView
        android:id="@+id/action_bar_search_et"
        android:layout_height="33dp"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_market_search_bg"
        android:drawableRight="@drawable/search2"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="请输入关键字搜索"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/market_fragment_message"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/market_fragment_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/me_fragment_action_message"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        />
    <ImageView
        android:id="@+id/home_fragment_message_red_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/home_fragment_message"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/market_fragment_message"
        android:src="@drawable/red_dot"/>
</RelativeLayout>

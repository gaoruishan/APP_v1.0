<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_action_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_title_and_date" />

            <!--  <View
                  android:layout_width="match_parent"
                  android:layout_height="72dp" />-->

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_btn_blue_corners_selecter"
                android:gravity="center"
                android:text="@string/journey_btn_next"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <com.cmcc.hyapps.andyou.widget.circularprogressbar.CircularProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
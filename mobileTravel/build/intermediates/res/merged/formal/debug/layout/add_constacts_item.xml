<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto/test.grs.com.im"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="ResAuto">
    <!-- item背景色变换 -->
    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:visibility="gone"
        android:background="@drawable/text_type"
        android:paddingBottom="5dip"/>
    <LinearLayout 
        android:id="@+id/ll_constact"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/whites">
        <test.grs.com.ims.view.RoundImageView
            android:id="@+id/icon" 
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/icon_default_avatar"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:textColor="#336598"
                android:gravity="center_vertical"
                android:text="姓名fksdfjklsjflkskjflsj"
                android:singleLine="true"
                android:maxWidth="150dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/sex"
                android:layout_height="15dp"
                android:layout_width="wrap_content"
                android:src="@drawable/nan"
                android:layout_marginLeft="10dp"
                android:gravity="center"
              />
        </LinearLayout>

        <ImageView
            android:id="@+id/message_send"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_marginRight="@dimen/size_10dp"
            android:src="@drawable/jgz" />

    </LinearLayout>

</LinearLayout>
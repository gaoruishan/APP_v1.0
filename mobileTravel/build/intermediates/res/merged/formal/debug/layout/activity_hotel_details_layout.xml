<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/layout_action_bar"
         />
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/base_grey_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id="@+id/hotel_details_guide_viewpager"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="218dp" />
            <ImageView
                android:id="@+id/hotel_details_picture"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="218dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/layer_list_top_bottom">
                <TextView
                    android:id="@+id/hotel_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:textColor="#333333"/>
                <ImageView
                    android:id="@+id/hotel_details_tel_image"
                    android:layout_below="@id/hotel_details_name"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/tel"/>
                <TextView
                    android:id="@+id/hotel_details_tel_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/hotel_details_tel_image"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:maxWidth="130dp"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/hotel_details_sale_image"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:visibility="visible"
                    android:background="@drawable/sales"/>
                <TextView
                    android:id="@+id/hotel_details_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="人均"
                    android:layout_toLeftOf="@+id/hotel_details_price"
                    android:layout_marginLeft="8dp"
                    android:layout_alignBottom="@+id/hotel_details_tel_number"
                    android:textColor="#565656"/>
                <TextView
                    android:id="@+id/hotel_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f34747"
                    android:textSize="24sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                   />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/hotel_details_location_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/layer_list_top_bottom"
               >
                <TextView
                    android:id="@+id/hotel_details_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#565656"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/icon_near"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:layout_toLeftOf="@+id/hotel_details_location_next"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:id="@+id/hotel_details_location_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/layer_list_top_bottom"
                >
                <ImageView
                    android:id="@+id/favorable"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/favorable"/>
                <TextView
                    android:id="@+id/hotel_details_favorable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/favorable"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hotel_details_argument_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/layer_list_top_bottom">
                <TextView
                    android:id="@+id/hotel_details_argument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/argument"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:layout_toLeftOf="@+id/hotel_details_argument_next"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:id="@+id/hotel_details_argument_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white">
                <ImageView
                    style="@style/me_all_divider"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:contentDescription="@string/content_description"/>
                <TextView
                    android:id="@+id/hotel_details_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商户介绍"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/merchant"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:layout_toLeftOf="@+id/hotel_details_merchant_next"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:id="@+id/hotel_details_merchant_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:orientation="vertical">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:scaleType="fitXY"
                   android:src="@drawable/dot_line"/>
           </LinearLayout>
            <TextView
                android:id="@+id/hotel_details_merchant_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:padding="15dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:background="@color/white"></TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<!-- This is a common list activity layout used by many activity, DON'T modify it if you are not sure. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/root_container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/base_grey_bg">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_tab_height"
        layout="@layout/layout_recycler_list" />

    <include layout="@layout/layout_action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/bottom_tab_height"
        android:background="@drawable/fg_bottom_shadow_index" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_tab_height"
        android:layout_gravity="bottom"
        android:background="@color/base_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_bottom_tab_praise_selecter"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="#8c8c8c"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_bottom_tab_comment_selecter"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="#8c8c8c"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_bottom_tab_share_selecter"
            android:gravity="center"
            android:text="@string/bottom_tab_share"
            android:textColor="#8c8c8c"
            android:visibility="gone"
            android:textSize="9sp" />
    </LinearLayout>

</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.cmcc.hyapps.andyou.fragment.MapListenDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:minWidth="300dp"
        android:layout_height="150dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/rl_spot_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_listen"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/live_play_selecter"/>

        <TextView
            android:layout_margin="12dp"
            android:id="@+id/tv_spot_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="12dp"
            android:drawableLeft="@drawable/ic_action_bar_location"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:id="@+id/tv_spot_distance"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:id="@+id/intro_recyclerview"/>
</LinearLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/home_secnic_bg"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/layout_action_bar" />
        <include
            layout="@layout/fragment_search"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/live_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="111dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center_horizontal|bottom">
        </FrameLayout>
        <include layout="@layout/fragment_switch2"/>
     </LinearLayout>


    <com.cmcc.hyapps.andyou.widget.circularprogressbar.CircularProgressBar
        android:id="@+id/live_loading_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/action_bar_height"
        android:indeterminate="true"
        android:indeterminateOnly="true" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_grey_bg"
    android:orientation="vertical" >
    <include layout="@layout/layout_action_bar" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <include layout="@layout/hotel_detail_header_layout" />
    <TextView
        android:id="@+id/rest_special_foods_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/rooms_info"
        android:drawableLeft="@drawable/icon_rest_special"
        android:drawablePadding="5dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_grey_line"
        />-->
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/myroom_line"
       >
       </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_grey_line"
        />
    </LinearLayout>
</ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:id="@+id/rl_discover_item"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <!--<com.android.volley.toolbox.NetworkImageView-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:id="@+id/iv_item_discover"-->
        <!--android:background="@drawable/bg_iv_corner_stroke"-->
        <!--android:src="@drawable/sample_discover"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->
    <com.cmcc.hyapps.andyou.widget.roundimageview.RoundedImageView
        android:id="@+id/iv_item_discover"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/content_description"
        android:scaleType="fitXY"
        app:corner_radius="5dp"
        app:border_width="1dp"
        app:border_color="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/item_title"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_item_discover"
        android:layout_toEndOf="@+id/iv_item_discover"
        android:layout_marginStart="15dp" />

    <!-- android:ellipsize="marquee" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_contents"
        android:maxLines="4"
        android:textSize="12sp"
        android:paddingTop="12dp"
        android:layout_marginBottom="3dp"
        android:ellipsize="end"
        android:lineSpacingExtra="1dp"
        android:layout_alignBottom="@+id/iv_item_discover"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/item_title"
        android:layout_alignStart="@+id/item_title" />
</RelativeLayout>

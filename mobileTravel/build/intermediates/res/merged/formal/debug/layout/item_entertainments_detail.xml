<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/route_detail_tv"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ff555555"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.cmcc.hyapps.andyou.widget.roundimageview.RoundedImageView
        android:gravity="center_horizontal"
        android:id="@+id/route_detail_image"
        android:layout_below="@id/route_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:scaleType="fitXY"
        android:src="@drawable/recommand_bg"
        android:layout_gravity="center_horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        app:corner_radius="5dp"
        />
    <LinearLayout
        android:layout_below="@+id/route_detail_image"
        android:id="@+id/shop_adrress_ll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_height="70dp">
        <TextView
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="13dp"
            android:textColor="#ff333333"
            android:layout_width="wrap_content"
            android:text="@string/shop_address"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/icon_near"
            android:paddingTop="17dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shop_adrress_tv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:maxLines="2"
            android:text=""
            android:textColor="#ff555555"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.cmcc.hyapps.andyou.widget.BottomTab xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_tab_detail"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_tab_height"
    android:gravity="center"
    android:orientation="horizontal" >


    <TextView
        android:id="@+id/prase"
        style="@style/bottom_tab_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/praise"
        android:text="0" />

    <TextView
        android:id="@+id/comment"
        style="@style/bottom_tab_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/comment"
        android:text="0" />

    <TextView
        style="@style/bottom_tab_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/warn"
        android:text="举报" />

</com.cmcc.hyapps.andyou.widget.BottomTab>
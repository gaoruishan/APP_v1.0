<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto/test.grs.com.im"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="ResAuto">
    <!-- item背景色变换 -->
    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_type"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingTop="2dip"
        android:textColor="#454545" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/whites"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/whites"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <CheckBox
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cb_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selected_selector"
            android:button="@null"
            android:visibility="gone"
            android:checked="false" />

        <test.grs.com.ims.view.RoundImageView
            android:id="@+id/icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_default_avatar" />

        <LinearLayout
            android:id="@+id/ll_constact"
            android:layout_width="0dp"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:paddingRight="50dp"
                android:gravity="center_vertical"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:maxWidth="130dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nick_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text=""
                android:visibility="gone"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxWidth="130dp"
                android:paddingRight="20dp"
                android:textColor="@color/gray_font"
                android:textSize="14sp"
                 />
        </LinearLayout>
    </LinearLayout>

        <ImageView
            android:id="@+id/message_send"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:layout_weight="1.2"
            android:clickable="true"
            android:src="@drawable/hx"
            />
    </LinearLayout>
</LinearLayout>
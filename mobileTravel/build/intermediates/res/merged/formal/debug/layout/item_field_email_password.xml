<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="53dp"
              android:background="@drawable/bg_item_base_selecter"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="20dp"
              android:paddingRight="20dp" >

    <TextView
        android:id="@+id/et_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="密码"
        android:textColor="#0fd5f2"
        android:textSize="16sp" />

    <com.cmcc.hyapps.andyou.support.ExEditText
        android:id="@+id/et_login_email"
        style="@style/settings_btn_blur"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="46dp"
        android:gravity="left|center_vertical"
        android:hint="@string/hint_login_input_email_password"
        android:inputType="textCapWords"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:password="true"
        android:paddingLeft="50dp"
        android:paddingRight="@dimen/common_margin"
        android:textColor="@color/black_text_color_selecter"
        android:textColorHint="#cacaca" />
    <ToggleButton
        android:id="@+id/et_login_email_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_settings_on_off_slt"
        android:visibility="gone"
        android:textOff=""
        android:textOn=""/>
</LinearLayout>